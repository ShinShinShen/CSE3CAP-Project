{
  "meta": { "version": "0.2", "default_vendor": "auto" },

  "vendor_mappings": {
    "fortinet": {
      "detect_headers_any": ["seq #", "id", "source", "destination", "service", "action"],
      "columns": {
        "id": ["seq #", "id", "policyid"],
        "name": ["name", "policyname"],
        "srcaddr": ["source", "source normalized interface", "srcaddr", "src_ip"],
        "dstaddr": ["destination", "destination normalized interface", "dstaddr", "dst_ip"],
        "service": ["service", "service name", "service value"],
        "action": ["action"],
        "log": ["log", "logtraffic", "log all sessions"],
        "comment": ["comments", "remark", "tl comment"],
        "risk_rating": ["risk rating"]
      },
      "defaults": {
        "name": "",
        "service": "any",
        "log": "yes",
        "comment": "",
        "risk_rating": ""
      }
    }
  },

  "risk_rules": {
    "allow_all": {
      "enabled": true,
      "match": { 
        "srcaddr": ["any", "all", "0.0.0.0/0"], 
        "dstaddr": ["any", "all", "0.0.0.0/0"], 
        "action": ["accept", "allow"] 
      },
      "severity": "HIGH"
    },
    "admin_port_exposed": {
      "enabled": true,
      "match_ports": { "dst_port": ["22", "3389", "23"] },
      "action_scope": ["accept", "allow"],
      "severity": "CRITICAL"
    },
    "no_logging": {
      "enabled": true,
      "match": { "log": ["no", "false", "", "none"] },
      "severity": "MEDIUM"
    },
    "broad_ip_range": {
      "enabled": true,
      "match": { "srcaddr": ["0.0.0.0/0"], "dstaddr": ["0.0.0.0/0"] },
      "severity": "HIGH"
    },
    "incomplete_rule": {
      "enabled": true,
      "required_fields": ["srcaddr", "dstaddr", "action", "service"],
      "severity": "HIGH"
    },
    "missing_name": {
      "enabled": true,
      "bad_names": ["", "rule1", "rule2", "default", "unnamed"],
      "severity": "LOW"
    },
    "redundant_rule": {
      "enabled": false,
      "method": "simple_same_src_dst",
      "severity": "LOW"
    },
    "untagged_rule": {
      "enabled": true,
      "field": "name",
      "empty_values": ["", "none"],
      "severity": "INFO"
    },
    "weak_protocol": {
      "enabled": true,
      "match": { "service": ["ftp", "telnet", "http"] },
      "severity": "HIGH"
    },
    "any_source_high_port": {
      "enabled": true,
      "match": { "srcaddr": ["any", "0.0.0.0/0"] },
      "match_ports": { "dst_port": ["1024-65535"] },
      "severity": "MEDIUM"
    },
    "suspicious_service": {
      "enabled": true,
      "match": { "service": ["unknown", "custom"] },
      "severity": "LOW"
    }
  },

  "service_port_map": {
    "ssh": "22",
    "rdp": "3389",
    "rdp-tcp": "3389",
    "ms-rdp": "3389",
    "telnet": "23",
    "http": "80",
    "https": "443",
    "smtp": "25",
    "smtp-secure": "587"
  },

  "reporting": {
    "severity_palette": {
      "CRITICAL": "#d32f2f",
      "HIGH": "#f57c00",
      "MEDIUM": "#fbc02d",
      "LOW": "#388e3c",
      "INFO": "#1976d2"
    }
  }
}
