{
  "vendor_mappings": {
    "fortinet": {
      "detect_headers_any": ["seq #", "source", "destination", "service", "action"],
      "columns": {
        "id": ["seq #"],
        "name": ["name"],
        "srcaddr": ["source", "srcaddr"],
        "src_address": ["address"],
        "dstaddr": ["destination", "dstaddr"],
        "dst_address": ["address.1"],   
        "service": ["service"],
        "action": ["action"],
        "log": ["log"],
        "comment": ["comments"],
        "risk_rating": ["risk"]
      },
      "defaults": {
        "log": "log all sessions",
        "comment": ""
      }
    },

    "sdwan": {
      "detect_headers_any": ["rule id", "src-ip", "dst-ip", "protocol", "action"],
      "columns": {
        "id": ["rule id"],
        "name": ["name"],
        "srcaddr": ["src-ip"],
        "dstaddr": ["dst-ip"],
        "service": ["protocol"],
        "action": ["action"],
        "log": ["logging"],
        "comment": ["description"]
      },
      "defaults": {
        "log": "enabled",
        "comment": ""
      }
    },

    "client3_csv": {
      "detect_headers_any": ["policyid", "srcaddr", "dstaddr", "service", "action"],
      "columns": {
        "id": ["policyid"],
        "name": ["comments"],
        "srcaddr": ["srcaddr"],
        "dstaddr": ["dstaddr"],
        "service": ["service"],
        "action": ["action"],
        "log": ["log"],
        "comment": ["comments"],
        "status": ["status"],
        "srcaddr_negate": ["srcaddr-negate"],
        "dstaddr_negate": ["dstaddr-negate"],
        "service_negate": ["service-negate"]
      },
      "defaults": {
        "log": "log all sessions",
        "comment": "",
        "status": "enable"
      },
      "risk_rules": {
        "allow_all_source_port_client3": {
          "enabled": true,
          "match": {
            "srcaddr": ["any", "all", "0.0.0.0/0"],
            "srcaddr_negate": ["disable"],
            "status": ["enable"],
            "action": ["accept", "allow"]
          },
          "severity": "HIGH"
        },
        "allow_all_destination_port_client3": {
          "enabled": true,
          "match": {
            "dstaddr": ["any", "all", "0.0.0.0/0"],
            "dstaddr_negate": ["disable"],
            "status": ["enable"],
            "action": ["accept", "allow"]
          },
          "severity": "HIGH"
        },
        "allow_all_service_client3": {
          "enabled": true,
          "match": {
            "service": ["all", "ip/0", "any"],
            "service_negate": ["disable"],
            "status": ["enable"],
            "action": ["accept", "allow"]
          },
          "severity": "HIGH"
        },
        "service_admin_port_exposed_client3": {
          "enabled": true,
          "match_ports": {
            "service": ["22", "23", "3389", "5900", "5985", "5986"]
          },
          "match": {
            "service_negate": ["disable"],
            "status": ["enable"],
            "action": ["accept", "allow"]
          },
          "severity": "CRITICAL"
        },
        "smb_netbios_exposed_client3": {
          "enabled": true,
          "match_ports": {
            "service": ["137", "138", "139", "445"]
          },
          "match": {
            "service_negate": ["disable"],
            "status": ["enable"],
            "action": ["accept", "allow"]
          },
          "severity": "CRITICAL"
        },
        "suspicious_service_client3": {
          "enabled": true,
          "match": {
            "service": ["telnet", "ftp", "tftp", "irc"],
            "service_negate": ["disable"],
            "status": ["enable"],
            "action": ["accept", "allow"]
          },
          "severity": "HIGH"
        },
        "no_logging_client3": {
          "enabled": true,
          "match": {
            "log": ["disable", "no log", "none", "log violation traffic"],
            "status": ["enable"],
            "action": ["accept", "allow"]
          },
          "severity": "MEDIUM"
        }
      }
    }
  },

  "risk_rules": {
    "allow_all_source_port": {
      "enabled": true,
      "match": {
        "srcaddr": ["any", "all", "0.0.0.0/0"],
        "action": ["accept", "allow"]
      },
      "severity": "HIGH"
    },
    "allow_all_destination_port": {
      "enabled": true,
      "match": {
        "dstaddr": ["any", "all", "0.0.0.0/0"],
        "action": ["accept", "allow"]
      },
      "severity": "HIGH"
    },
    "allow_all_service": {
      "enabled": true,
      "match": {
        "service": ["all", "ip/0", "any"],
        "action": ["accept", "allow"]
      },
      "severity": "HIGH"
    },

    "smb_Netbios_Exposed": {
      "enabled": true,
      "match_ports": { "service": ["137", "135", "138", "139", "445"] },
      "action_scope": ["accept", "allow"],
      "severity": "CRITICAL"
    },
    "Admin_Port_Exposed": {
      "enabled": true,
      "match_ports": { "service": ["22", "23", "3389", "5900", "5985", "5986"] },
      "action_scope": ["accept", "allow"],
      "severity": "CRITICAL"
    },
    "suspicious_service": {
      "enabled": true,
      "match": { "service": [ "tftp", "irc", "smtp", "ldap"] },
      "action_scope": ["accept", "allow"],
      "severity": "High"
    },

    "LPD_Port_Exposure": {
      "enabled": true,
      "match": { "service": ["lpdw0rm"] },
      "action_scope": ["accept", "allow"],
      "severity": "High"
    },
    "broad_ip_range": {
      "enabled": true,
        "values": ["all", "0.0.0.0/0", "::/0"],
        "action_scope": ["accept", "allow"],
        "severity": "HIGH"
    },

    "No_logging_error": {
      "enabled": true,
      "match": { "log": ["disable", "no log", "none", "log violation traffic"] },
      "action_scope": ["accept", "allow"],
      "severity": "MEDIUM"
    },
    "Weak_Protocol": {
      "enabled": true,
      "match": { "service": ["http", "ftp", "telnet"] },
      "action_scope": ["accept", "allow"],
      "severity": "HIGH"
    },
    "any_source_high_port": {
      "enabled": true,
      "match": {
        "srcaddr": ["any", "all", "0.0.0.0/0"],
        "dst_port": ["1024-65535"],
        "action": ["accept", "allow"]
      },
      "severity": "MEDIUM"
    }
  },

  "service_port_map": {
    "ssh": "22",
    "telnet": "23",
    "rdp": "3389",
    "vnc": "5900",
    "winrm-http": "5985",
    "winrm-https": "5986",
    "nbt": "137",
    "netbios-dgm": "138",
    "tcp_135": "135",
    "microsoft-ds": "445"
  }
}
