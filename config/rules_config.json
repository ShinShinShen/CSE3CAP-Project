{
  "meta": { "version": "0.1", "default_vendor": "auto" },

  "vendor_mappings": {
    "fortinet": {
      "detect_headers_any": ["id", "src_ip", "dst_ip", "src_port", "dst_port", "protocol", "action", "comment"],
      "columns": {
        "id": ["id", "policyid"],
        "name": ["name", "policyname"],
        "srcaddr": ["srcaddr", "source", "src_ip"],
        "dstaddr": ["dstaddr", "destination", "dst_ip"],
        "service": ["service"],
        "action": ["action"],
        "log": ["logtraffic", "log"],
        "src_port": ["src_port"],
        "dst_port": ["dst_port"],
        "protocol": ["protocol"],
        "tag": ["tag"]
      },
      "defaults": {
        "name": "",
        "service": "any",
        "log": "yes",
        "tag": ""
      }
    }
  },

  "risk_rules": {
    "allow_all": {
      "enabled": true,
      "match": { "srcaddr": ["any", "all", "0.0.0.0/0"], "dstaddr": ["any", "all", "0.0.0.0/0"], "action": ["accept", "allow"] },
      "severity": "HIGH"
    },
    "admin_port_exposed": {
      "enabled": true,
      "match_ports": { "dst_port": ["22", "3389", "23"] },
      "action_scope": ["accept", "allow"],
      "severity": "CRITICAL"
    },
    "no_logging": {
      "enabled": true,
      "match": { "log": ["no", "false", "", "none"] },
      "severity": "MEDIUM"
    },
    "broad_ip_range": {
      "enabled": true,
      "cidr_threshold": 0,
      "severity": "HIGH"
    },
    "incomplete_rule": {
      "enabled": true,
      "required_fields": ["srcaddr", "dstaddr", "action", "service"],
      "severity": "HIGH"
    },
    "missing_name": {
      "enabled": true,
      "bad_names": ["", "rule1", "rule2", "default", "unnamed"],
      "severity": "LOW"
    },
    "redundant_rule": {
      "enabled": false,
      "method": "simple_same_src_dst",
      "severity": "LOW"
    },
    "untagged_rule": {
      "enabled": true,
      "field": "tag",
      "empty_values": ["", "none"],
      "severity": "INFO"
    },
    "weak_protocol": {
      "enabled": true,
      "match": { "protocol": ["ftp", "telnet"] },
      "severity": "HIGH"
    },
    "any_source_high_port": {
      "enabled": true,
      "match": { "srcaddr": ["any", "0.0.0.0/0"] },
      "match_ports": { "dst_port": ["1024-65535"] },
      "severity": "MEDIUM"
    },
    "suspicious_service": {
      "enabled": true,
      "match": { "service": ["unknown", "custom"] },
      "severity": "LOW"
    }
  },

  "reporting": {
    "severity_palette": {
      "CRITICAL": "#d32f2f",
      "HIGH": "#f57c00",
      "MEDIUM": "#fbc02d",
      "LOW": "#388e3c",
      "INFO": "#1976d2"
    }
  }
}
